{% extends 'base.html.twig' %}

{% block title %}All programs{% endblock %}

{% block body %}
    <h1>Toutes les séries de la table program : </h1>
 <div class="row">    
{% for program in programs %}

  <div class="col-sm-4">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">{{ loop.index }} / {{ program.title }} - Catégorie : {{ program.category.name }}</h5>
        <img src="{{ program.poster }}" alt="">
        <p class="card-text">{{ program.synopsis }}</p>
        <a class="btn btn-primary" href="{{ path("program_show", { program: program.id }) }}">Voir la fiche</a>
        <a class="btn btn-primary" href="{{ path("program_edit", { program: program.id }) }}">Modifier</a>
        <a class="btn btn-primary" href="{{ path("program_delete", { program: program.id }) }}">Supprimer</a>
      </div>
    </div>
    </div>

    {% else %}

        Aucune série trouvée.
    {% endfor %}
</div>
  
    <a href ="{{ path('program_new')}}"><button class="class='btn-secondary btn-sm" >Ajouter une série</button></a>
    <a href="{{ path('app_index') }}"><button class="class='btn-secondary btn-sm" >Retour à l'accueil</button></a>
{% endblock %}