{% extends 'base.html.twig' %}

{% block title %}Série #{{ program.id }}{% endblock %}

{% block body %}
    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.synopsis }}</p>
            <p>Catégorie : {{ program.category.name }}</p>
            {% for season in seasons %}
                <h2>Saison {{ season.number }}</h2>
                <p>{{ season.description }}</p>
               <a href="{{ path('program_season_show', {'program': season.program.id, 'season': season.id}) }}">Saison {{ season.number }}</a>
            {% endfor %}
        </div>
    </div>
    <a href="{{ path('program_index') }}"><button class="class='btn-secondary btn-sm" >Retour à la liste des programmes</button>
        
    </a>

{% endblock %}