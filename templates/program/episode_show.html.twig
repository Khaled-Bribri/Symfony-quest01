{% extends "base.html.twig" %}

{% block title %}Episode #{{ episode.number }}{% endblock %}

{% block body %}
<div class="row">
  <div class="col-lg-12">
    <div class="card">
      <div class="card-body">

				<h1>Informations sur l'épisode #{{episode.number}} de {{program.title}}</h1>
				<p>Saison {{season.number}}</p>
				<p>Synopsis : {{episode.synopsis}}</p>
				<p>Première diffusion : {{season.year}}</p>
			</div>
		</div>
	</div>
</div>
<div class="row">
  <div class="col-lg-12">
    <div class="card">
      <div class="card-body">
	  				{% for comment in comments %}
						<h2>auteur_id: {{comment.author}}</h2>
						<h3>{{comment.rate}}</h3>
						<p>{{comment.comment}}</p>
					{% endfor %}

	  		</div>
		</div>
	</div>
</div

<div class="row">
  <div class="col-lg-12">
    <div class="card">
      <div class="card-body">
	  <form method='POST'>
				{{form_start(form)}}
				{{form_widget(form)}}
				{% if app.user is defined and app.user is not empty  %}
				<button type="submit" class='btn-secondary btn-sm'>Add comment</button>
				{% endif %}
				{{form_end(form)}}
		</form>
			</div>
		</div>
	</div>
</div

<a href="{{path("program_season_show", {program: program.id, season: season.id})}}">
				<button class='btn-secondary btn-sm'>Retour</button>
			</a>
  
{% endblock %}
